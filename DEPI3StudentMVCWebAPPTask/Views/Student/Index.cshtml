@model IEnumerable<Student>

@{
    ViewData["Title"] = "All Students";
}
<h1>All Students</h1>
<br />
<br />
@if (Model.Count() > 0)
{
    <table class="mt-3 table table-scripted table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(E => E.Id)</td>
                <td>@Html.DisplayNameFor(E => E.Name)</td>
                <td>@Html.DisplayNameFor(E => E.ImgPath)</td>
                <td>@Html.DisplayNameFor(E=> E.Address)</td>
                <td>Details</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var student  in Model)
            {
                <tr>
                    <td class="align-middle">@Html.DisplayFor(M => student.Id)</td>
                    <td class="align-middle">@Html.DisplayFor(M => student.Name)</td>
                    <td class="align-middle"><img style="width:200px" src="@Html.DisplayFor(M => student.ImgPath)"/></td>
                    <td class="align-middle">@Html.DisplayFor(M => student.Address)</td>
                    <partial name="_ButtonsPartialView" model="@student.Id" />

                </tr>
            }

        </tbody>

    </table>
}

else
{
    <div class=" mt-4 alert alert-warning">
        <h3>There is No Students </h3>
    </div>
}