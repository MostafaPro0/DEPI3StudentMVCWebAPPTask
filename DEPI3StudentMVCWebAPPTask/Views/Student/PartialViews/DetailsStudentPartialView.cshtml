@model Student

<div class="form-group">
    <label class="col-form-label" asp-for="Id"></label>
    <input asp-for="Id" class="form-control" readonly />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Name"></label>
    <input asp-for="Name" class="form-control" readonly />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Address"></label>
    <input asp-for="Address" class="form-control" readonly />
</div>
<div class="form-group m-3">
    <img style="width:200px" src="@Url.Content("/" + Model.ImgPath)" alt="Student Image" />
</div>
